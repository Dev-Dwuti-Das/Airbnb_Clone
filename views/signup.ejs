<% layout('layouts/boiler') %>
<body>
<form class="needs-validation signup col-6 offset-3 mt-3" novalidate action="/signup" method="post">
    <h1 class="hero_text fs-1"> SignUp </h1>
    <div class="mb-3">
     <label for="exampleInputuser" class="form-label para ps-2">Username</label>
     <input type="text" class="form-control rounded-pill formbox" name="username" placeholder="name"  id="exampleInputuser" aria-describedby="emailHelp" required>
     <div class="invalid-feedback ps-3">
            Enter username
    </div>
    <div class="valid-feedback ps-3">
            Looks good!
    </div>
  </div>
  <div class="mb-3 mt-1">
    <label for="exampleInputEmail1" class="form-label para ps-2">Email address</label>
    <input type="email" class="form-control rounded-pill formbox" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="abc@gmail.com" required>
    <div id="emailHelp" class="form-text para1 ms-2">We'll never share your email with anyone else.</div>
    <div class="invalid-feedback ps-3">
            Enter valid email
    </div>
    <div class="valid-feedback ps-3">
            Looks good!
    </div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label para ps-2">Password</label>
    <input type="password" class="form-control rounded-pill formbox" placeholder="password"  name="password" id="exampleInputPassword1" required>
    <div class="invalid-feedback ps-3">
            Enter password !
    </div>
    <div class="valid-feedback ps-3">
            Looks good!
    </div>
  </div>
  <button type="submit" style="width: 180px;" class="btn btn-primary mt-3 mb-5 p-2 rounded-pill ms-1">Submit</button>
</form>

<script>
  (() => {
    'use strict'

    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>
</body>