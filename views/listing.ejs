<% layout('layouts/boiler') %>

<body>
  <div class="row">
  <div class="col me-3">
    <h1 class="hero_text">Inspiring locations to Lodge</h1>
    <div class="para py-3 ps-1 pe-5">
      Create memorable travel moments by choosing a designer house with a warm
      ambiance as your accommodation.
    </div>

    <div class="searchbar d-flex justify-content-center align-items-center my-3">
      <form class="d-flex align-items-center" role="search" action="/listing/search">
        <input
          class="form-control rounded-pill searchbox me-2"
          type="search"
          placeholder="Search"
          name="searchbox"
          aria-label="Search"
        />
        <button class="btn-circle btn-success rounded-pill" type="submit">
          <i class="fa-solid fa-magnifying-glass" style="color: #ffffff"></i>
        </button>
      </form>
    </div>
  </div>

  <div class="col">
    <div class="row hero_img position-relative m-0 mb-1">
      <div class="hero_img_text position-absolute top-0 start-0 text-white fw-medium fs-1 pe-5 p-3 me-2">
        Exceptional properties around the globe
      </div>
      <div class="hero_widget_btn position-absolute bottom-0 start-0 text-white p-4">
        <button class="modern-btn p-3 px-4 rounded-pill">
          Show Top rated villas
          <i class="ms-2 fa-solid fa-location-arrow fa-lg"></i>
        </button>
      </div>

      <img
        class="landing_page_img p-0 w-100"
        src="assests/pic32.jpg"
        alt="pic2.jpg"
      />
    </div>

    <div class="row mt-2">
      <div class="d-flex justify-content-between landing_page_widget_white rounded-pill px-4 py-2">
        <div>6900+</div>
        <div class="fw-medium">Unique places</div>
      </div>
    </div>

    <div class="row mt-2 justify-content-center">
      <!-- First image -->
      <div class="col-12 col-lg-6 p-0 d-flex justify-content-end pe-lg-1">
        <div class="image-wrapper position-relative w-100">
          <img
            class="homepage_widget_secondary w-100"
            src="/assests/pic6.jpg"
            height="250"
            alt="Recommended Places"
          />

          <div class="hero_img_text position-absolute top-0 start-0 text-white fw-medium fs-2 px-3 pt-3">
            Recommended Places
          </div>

          <div class="location_marker position-absolute bottom-0 start-0 text-white p-4">
            <button class="modern-btn rounded-circle p-3">
              <i class="fa-solid fa-location-dot fa-xl p-1"></i>
            </button>
          </div>
        </div>
      </div>

      <div class="col-12 col-lg-6 p-0 d-flex justify-content-start ps-lg-1">
        <div class="image-wrapper position-relative w-100">
          <img
            class="homepage_widget_secondary w-100"
            src="/assests/pic1.jpg"
            height="250"
            alt="Top Finds"
          />

          <div class="hero_img_text position-absolute top-0 start-0 text-white fw-medium fs-2 px-3 pt-3">
            Top Finds
          </div>

          <div class="location_marker position-absolute bottom-0 start-0 text-white p-4">
            <button class="modern-btn rounded-circle p-3">
              <i class="fa-solid fa-location-dot fa-xl p-1"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


  <div class="hero_text_secondary py-3 px-0 my-5">
    Make your move and discover
    <span>
      <img
        class="rounded-pill img-mask"
        src="/assests/pic10.jpg"
        alt="Mountain"
      />
    </span>
    the world
    <span class="">
      <img class="rounded-pill img-mask2" src="/assests/pic8.jpg" alt="Beach" />
    </span>
    that's waiting for you.
  </div>

  <div
    class="row row-cols-xs-1 row-cols-sm-2 row-cols-md-2 row-cols-xxl-3 mt-3 g-3"
  >
    <% for (let item of data) { %>
    <div class="col">
      <div class="listingcard d-flex justify-content-center">
        <a
          href="/listing/details/<%= item._id %>"
          class="text-decoration-none text-dark"
        >
          <div class="position-relative">
            <div
              class="hero_widget_btn position-absolute bottom-0 start-0 text-white p-2"
            >
              <button class="modern-btn p-2 px-2 rounded-pill">
                <b class="fw-semibold"
                  >&#8377; <%= item.price.toLocaleString("en-IN") %></b
                >/nights
              </button>
            </div>
            <img
              src="<%= item.image.url %>"
              class="card-img-top img-fluid w-md-75"
              alt="Listing Image"
            />
          </div>

          <div class="card-body">
            <p class="para card-text mx-auto">
              <%= item.title %><br />
              <!-- <b>&#8377; <%= item.price.toLocaleString("en-IN") %></b> for 2
              nights -->
            </p>
          </div>
        </a>
      </div>
    </div>
    <% } %>
  </div>
</body>
