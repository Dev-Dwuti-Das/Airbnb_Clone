<% layout('layouts/boiler') %>
<body>
    <div class="row mt-5">
        <div class="col col-8 offset-2">
            <div class="form">
                <form method="post" action="/listing" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="input mb-3" >
                        <label for="title">Title</label>
                            <input type="text" name="title" placeholder="Title" class="form-control" required>
                            <div class="invalid-feedback">
                                 Enter Title of the property !
                            </div>
                            <div class="valid-feedback">
                                 Looks good!
                            </div>
                        </div>
                    <div class="input mb-3">
                        <label for="Description">Description</label>
                        <textarea placeholder="Description" name="description" class="form-control" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div> 
                    <div class="mb-3">
                        <label for="formFile" class="form-label">choose image</label>
                        <input class="form-control" type="file" id="formFile" name="listing[image]">
                    </div>
                    <div class="input mb-3">
                        <label for="price">price</label>
                        <input type="text" name="price" placeholder="&#8377" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter property price 
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="row">
                        <div class="input mb-3 col-md-8">
                            <label for="location">location</label>
                            <input type="text" name = "location" placeholder="Delhi, noida" class="form-control" required>
                            <div class="invalid-feedback">
                            Enter property location 
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        </div>
                        <div class="input mb-3 col-md-4">
                            <label for="country">country</label>    
                            <input type="text" name = "country" placeholder="India" class="form-control" required>
                            <div class="invalid-feedback">
                            Enter country 
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        </div>
                    </div>
                        <div class="input mb-3">
                        <a><button type="submit" class="btn btn-primary">Sumbit</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        (() => {
        'use strict'
        const forms = document.querySelectorAll('.needs-validation')
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
            }, false)
        })
        })();
    </script>
</body>
