<% layout('layouts/boiler') %>
<body>
<h1>Result for : "<%=searchTerm%>"</h1>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-1 mt-3">
  <% for (let item of results) { %>
    <div class="col">
      <div class="listingcard w-100">
        <a href="/listing/details/<%= item._id %>" class="text-decoration-none text-dark">
          <img src="<%= item.image.url %>" class="card-img-top" alt="Listing Image">
          <div class="card-body">
            <p class="card-text mx-auto"><%= item.title %><br>
              <b>&#8377; <%= item.price.toLocaleString("en-IN") %></b> for 2 nights
            </p>
          </div>
        </a>
      </div>
    </div>
  <% } %>
</div>
    
</body>
</html>